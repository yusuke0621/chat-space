.Chat.main
  .Chat.main__group-info
    .Chat.main__group-info__group
      %ul 
        %li= @group.name
      .Chat.main__group-info__name
        %ul Member:
        - @group.users.each do |user|
          %li= user.name
    .Chat.main__group-info__btn
      = link_to edit_group_path(@group.id), class: "btn--edit"do
        Edit
  .Chat.main__message-list
    = render @messages
    .Chat.main__message-list__message
      .Chat.main__message-list__message__upper
        .Chat.main__message-list__message__upper__user-name
    
        .Chat.main__message-list__message__upper__date
          
      .Chat.main__message-list__message__lower
      
      .Chat.main__message-list__message__upper
        .Chat.main__message-list__message__upper__user-name
    
        .Chat.main__message-list__message__upper__date
      
      .Chat.main__message-list__message__lower
      
  .Chat.main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Chat.main__message-form__new--message
        = f.text_field :content, class: 'message__form', placeholder: 'type a message'
        = f.label :image, class: 'input-box' do
          = icon('far', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'submit-btn'
      