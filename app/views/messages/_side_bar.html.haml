.Side.bar
  .Side.bar__user-name
    .Side.bar__user-name__Top-items
      .Side.bar__user-name__Top-items__name 
        = current_user.name
      .Side.bar__user-name__Top-items__icons
        = link_to new_group_path, class: "icons--edit" do
          = icon('far', 'edit', class: "icons--edit")
        =  link_to edit_user_path(current_user), class: "icons--cog" do
          = icon('fas', 'cog')
  .Side.bar__group-list
    - current_user.groups.each do |group|
      .Side.bar__group-list__group
        = link_to group_messages_path(group) do
          .Side.bar__group-list__group__name
            = group.name
          .Side.bar__group-list__group__message
            = group.show_last_message